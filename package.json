{
  "name": "benkyou",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "better-auth": "^1.3.28",
      "dotenv": "^17.2.2",
      "zod": "^4.1.11",
      "typescript": "^5.8.2"
    }
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:generate": "cd packages/db && bun run db:generate",
    "db:migrate": "cd packages/db && bun run db:migrate",
    "db:push": "cd packages/db && bun run db:push",
    "db:studio": "cd packages/db && bun run db:studio",
    "auth:generate": "npx @better-auth/cli@latest generate --config packages/auth/src/index.ts --output packages/db/src/schema.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@radix-ui/react-tooltip": "^1.2.8",
    "dotenv": "^17.2.2",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.0",
    "nucleo-micro-bold": "^1.1.1",
    "radix-ui": "^1.4.3",
    "tailwindcss": "4",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/bun": "^1.2.6",
    "bun-plugin-tailwind": "^0.1.2",
    "prettier": "^3.2.5",
    "turbo": "^2.5.4"
  },
  "packageManager": "bun@1.3.2"
}

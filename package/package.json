{
    "name": "motion-plus",
    "version": "2.0.2",
    "private": true,
    "description": "A collection of Motion functions and components, exclusive to Motion+ members.",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "require": "./dist/cjs/index.js",
            "import": "./dist/es/index.mjs",
            "default": "./dist/cjs/index.js"
        },
        "./react": {
            "types": "./dist/react-entry.d.ts",
            "require": "./dist/cjs/react-entry.js",
            "import": "./dist/es/react-entry.mjs",
            "default": "./dist/cjs/react-entry.js"
        },
        "./animate-activity": {
            "types": "./dist/animate-activity.d.ts",
            "require": "./dist/cjs/animate-activity.js",
            "import": "./dist/es/animate-activity.mjs",
            "default": "./dist/cjs/animate-activity.js"
        }
    },
    "author": {
        "name": "Matt Perry",
        "url": "https://motion.dev"
    },
    "license": "MIT",
    "scripts": {
        "clean": "rm -rf types dist lib",
        "build": "yarn clean && tsc -p . && rollup --config",
        "dev": "concurrently -c blue,red -n tsc,rollup --kill-others \"tsc --watch -p . --preserveWatchOutput\" \"rollup --config --watch --no-watch.clearScreen\"",
        "test": "bundlesize && yarn jest --passWithNoTests",
        "new-package": "../../scripts/new.sh motion-plus"
    },
    "files": [
        "dist"
    ],
    "dependencies": {
        "motion": "^12.23.24",
        "motion-plus-dom": "^2.0.2",
        "motion-utils": "^12.23.6"
    },
    "devDependencies": {
        "@rollup/plugin-typescript": "^12.1.2",
        "@testing-library/dom": "^10.4.1",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "ts-jest": "^29.2.5"
    },
    "peerDependencies": {
        "react": "^18.0.0 || ^19.0.0",
        "react-dom": "^18.0.0 || ^19.0.0"
    },
    "peerDependenciesMeta": {
        "react": {
            "optional": true
        },
        "react-dom": {
            "optional": true
        }
    },
    "bundlesize": [
        {
            "path": "./dist/size.animate-number.js",
            "maxSize": "2.7 kB"
        },
        {
            "path": "./dist/size.carousel.js",
            "maxSize": "6.5 kB"
        },
        {
            "path": "./dist/size.cursor.js",
            "maxSize": "2.6 kB"
        },
        {
            "path": "./dist/size.ticker.js",
            "maxSize": "5 kB"
        },
        {
            "path": "./dist/size.typewriter.js",
            "maxSize": "2 kB"
        }
    ]
}
